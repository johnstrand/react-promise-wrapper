{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "src",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true,
        "lib": ["dom", "es2015", "es2015.promise"]
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "example",
        "lib",
        "dist"
    ]
}
